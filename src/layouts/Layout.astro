---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "../styles/base.css";
const rickRollUrl = "https://tinyurl.com/cust-feedback-mlp";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="canonical" href="https://mylittlepillow.store" />
    <meta
      name="description"
      content="My Little Pillow is the latest fashion trend going viral!"
    />
    <meta property="og:title" content="My Little Pillow" />
    <meta property="og:type" content="website" />
    <meta
      property="og:image"
      content="https://mylittlepillow.store/my-little-pillow.jpg"
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:image:alt"
      content="A simple product image featuring a tiny white pillow measuring about 2.5 inches by 4 inches. The pillow is very thin, made of clean, soft, and attractive white fabric."
    />
    <meta property="og:url" content="https://mylittlepillow.store" />
    <meta
      property="og:description"
      content="Discover 'My Little Pillow' - the latest ear accessory trend. This tiny, stylish pillow fits over your ear, adding a chic touch to any outfit. Get yours now and elevate your fashion game!"
    />
    <meta property="og:site_name" content="My Little Pillow Store" />
    <meta property="og:locale" content="en_US" />
    <meta name="robots" content="nofollow" />
    <meta
      name="googlebot-news"
      content="index, nofollow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
    />
    <title>{title}</title>
  </head>

  <body>
    <slot />
    <footer>
      <div style="grid-column: 1 / span 3; padding: 1rem">
        <p>
          No relation to any actual business or product is expressed nor
          implied.
        </p>
      </div><div>
        &copy; 2024 <a href="https://mylittlepillow.store/"
          >mylittlepillow.store</a
        >. All rights reserved.
      </div>
      <div>
        <p>This is a <a id="parodys" href="#">parody/s</a>ite.</p>
      </div>
      <div>
        <a href="/terms-of-use">Terms of Use</a> - <a href={rickRollUrl}
          >Feedback</a
        >
      </div>
    </footer>
    <audio id="dnmp3" src="./dn.mp3"></audio>
  </body>
</html>

<script>
  const sound = document.getElementById("dnmp3") as HTMLMediaElement;
  if (sound) {
    const parodys = document.getElementById("parodys");
    if (parodys) {
      parodys.addEventListener("click", (event) => {
        event.preventDefault();
        sound.play();
      });
    }
  }
</script>
