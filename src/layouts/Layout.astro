---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "../styles/base.css";
const rickRollUrl = "https://tinyurl.com/cust-feedback-mlp";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="My Little Pillow" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <link rel="icon" type="image/png" href="/favicon.png" />

    <title>{title}</title>
  </head>

  <body>
    <slot />
    <footer>
      <div style="grid-column: 1 / span 3; padding: 1rem">
        <p>
          No relation to any actual business or product is expressed nor
          implied.
        </p>
      </div><div>&copy; 2024 mylittlepillow.site. All rights reserved.</div>
      <div>
        <p>This is a <a id="parodys" href="#">parody/s</a>ite.</p>
      </div>
      <div><a href={rickRollUrl}>Feedback</a></div>
    </footer>
    <audio id="dnmp3" src="./dn.mp3"></audio>
  </body>
</html>

<script>
  const sound = document.getElementById("dnmp3") as HTMLMediaElement;
  if (sound) {
    const parodys = document.getElementById("parodys");
    if (parodys) {
      parodys.addEventListener("click", (event) => {
        event.preventDefault();
        sound.play();
      });
    }
  }
</script>
